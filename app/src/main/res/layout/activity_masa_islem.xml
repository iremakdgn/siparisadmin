<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".masaIslem">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rlyt"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/cksbtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:drawableLeft="?attr/actionModeCloseDrawable">
        </Button>

        <TextView
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Masa İşlem"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Masa No Seç"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="135dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:entries="@array/masa"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/mskapste"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Masa Kapasitesi Gir"
                android:inputType="date" />

            <Button
                android:id="@+id/eklebtn"
                android:layout_width="114dp"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="#ffc1c1"
                android:drawableLeft="@drawable/checkmark"
                android:text="Ekle"
                android:textSize="40px"></Button>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listmasa"/>
        </LinearLayout>


    </LinearLayout>

